<!DOCTYPE html>
<html>
<head>
  <title>RockPaperScissors</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>

  <link rel="stylesheet" type="text/css" href="../assets/css/bootstrap.css">

  <style>

    a {
      color: white;
      text-decoration: none;
      }

    a:hover {
      color: white;
      text-decoration: none;
    }

    a:active {
      color: white;
      text-decoration: none;
    }

  </style>

</head>
<body>

  <div class="container">
    <hr>

    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <div class="btn-group btn-group-justified">

          <a href="/rock" class="btn btn-primary">
            Play Rock
          </a>

          <a href="/paper" class="btn btn-info">
            Play Paper
          </a>

          <a href="/scissors" class="btn btn-primary">
            Play Scissors
          </a>
        </div>
      </div>
    </div>
<hr>
</div>

<%= yield %>

      </body>
      </html>
